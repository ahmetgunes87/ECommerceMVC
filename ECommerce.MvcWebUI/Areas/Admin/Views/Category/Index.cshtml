@using ECommerce.Entities.Concrete
@model List<Category>

@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Areas/Admin/Views/Shared/_Layaout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
    <h1 class="h2">Kategori Listesi</h1>
</div>

<div class="pt-3 pb-2 mb-3">
    <a href="@Url.Action("Form", "Category")" class="btn btn-success"><i class="fa fa-plus"></i> Yeni Kategori</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Kategori Adı</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryName</td>
                <td>
                    @if (category.IsActive)
                    {
                        <h6><span class="badge badge-success">Aktif</span></h6>
                    }
                    else
                    {
                        <h6><span class="badge badge-danger">Pasif</span></h6>
                    }
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Update", null, new { id = category.Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>
