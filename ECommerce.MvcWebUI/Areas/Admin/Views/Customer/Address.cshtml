@using ECommerce.Entities.ComplexTypes
@model List<CustomerAddressItem>
@{
    ViewBag.Title = "Müşteri Adresleri";
    Layout = "~/Areas/Admin/Views/Shared/_Layaout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
    <h1 class="h2">Müşteri Adres Listesi</h1>
</div>

<div class="pt-3 pb-2 mb-3">
    <a href="@Url.Action("AddressForm", "Customer", new { id = Url.RequestContext.RouteData.Values["id"] })" class="btn btn-success"><i class="fa fa-plus"></i> Yeni Adres</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Adres Başlığı</th>
            <th>Şehir</th>
            <th>İlçe</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customerAddress in Model)
        {
            <tr>
                <td>@customerAddress.Address.AddressName</td>
                <td>@customerAddress.CityName</td>
                <td>@customerAddress.DistrictName</td>
                <td>
                    @Html.ActionLink("Güncelle", "UpdateAddress", null, new { id = customerAddress.Address.Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>
